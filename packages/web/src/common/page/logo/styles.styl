@import '~src/variables.styl'

.logo
  height 64px
  display flex
  align-items center
  justify-content center
  color #5ABA4A
  font-weight 400
  text-transform uppercase

  @media only screen and (max-width: 1020px)
    font-size 0

  @media mobileMedia
    font-size inherit

.svg
  font-size 32px
  margin-right 8px

  @media only screen and (max-width: 1020px)
    margin-right 0px

  @media mobileMedia
    margin-right 8px
